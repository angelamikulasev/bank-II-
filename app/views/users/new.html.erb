<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
    <% end %>
  </ol>
<% end %>


<div class="new-user">
  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true  %>
   
    <%= f.label :email %>
    <%= f.email_field :email %>
  
    <%= f.label :password %>
    <%= f.password_field :password %>
   
    <br>
    
  <label>
    <%= f.submit %>
  </label>
  <% end %>
</div>


