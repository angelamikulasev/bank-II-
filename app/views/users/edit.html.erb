<h2>
  Editing
  <%= @user.name %>
</h2>

<div class="edit-user">

  <%= form_for @user do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <br>
  <%= f.submit %>
<% end %>
</div>